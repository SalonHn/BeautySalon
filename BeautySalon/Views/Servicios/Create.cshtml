
@model BeautySalon.Models.DataBase.Product
@using BeautySalon.Models.DataBase;

@{
    ViewData["Title"] = "Nuevo Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<RoleEmployee> skills = ViewBag.Skill;
}

<div class="mt-3 d-flex justify-content-center">
    <h1>Nuevo Servicio</h1>
</div>
<form asp-action="Create" asp-controller="Servicios" method="post" enctype="multipart/form-data">
    <h3>Descripcion del servicio</h3>
    <hr />
    <div class="row mt-2">
        <div class="col-6">
            <label class="form-label">Codigo</label>
            <input type="text" asp-for="Sku" class="form-control"/>
            <span asp-validation-for="Sku" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label class="form-label">Nombre</label>
            <input type ="text" asp-for="NameProduct" class="form-control"/>
            <span asp-validation-for="NameProduct" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6">
            <label class="form-label">Precio</label>
            <input type="text" asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label class="form-label">Imagen</label>
            <input type="file" asp-for="ImgFile" class="form-control" />
            <span asp-validation-for="ImgFile" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6">
            <label>Habilidad requerida</label>
            <select asp-for="IdSkill" class="form-select" asp-items="@(new SelectList(skills, "IdRole", "NameRole"))">
                <option>Seleccione</option>
            </select>
            <span asp-validation-for="IdSkill" class="text-danger"></span>
        </div>
        <div class="form-check col-6 mt-4">
            <input class="form-check-input" type="checkbox" asp-for="Featured" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">Servicio VIP</label>
            <span asp-validation-for="Featured" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <label class="form-label">Descripción</label>
        <textarea type="text" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr />
    <div class="row mt-3">
        <div class="d-flex justify-content-center col-6">
            <div><button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "Servicios")';">Cancelar</button></div>
        </div>
        <div class="d-flex justify-content-center col-6">
            <div><button type="submit" class="btn btn-success">Continuar</button></div>
        </div>
    </div>
</form>
