@model BeautySalon.Models.DataBase.Customer

@{
    ViewData["Title"] = "Register Customer";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="bg-white p-5 divLogin">
    <form asp-action="RegisterCustomer" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="d-flex justify-content-center">
            <img src="/img/logo.png" alt="Login-icon" class="imgLogoLogin" />
        </div>
        <div class="text-center fs-1 fw-bold">Register</div>
        <div class="row mt-2">
            <div class="col-2">
                 <i class="fa-solid fa-user icon-login"></i>
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for=FullName placeholder="Full Name" />
                <span asp-validation-for=FullName class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-2">
                <i class="fa-solid fa-phone icon-login"></i>
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for=Phone placeholder="Phone" />
                <span asp-validation-for=Phone class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <i class="fa-solid fa-key icon-login"></i>
            </div>
            <div class="col-10">
                <input class="form-control" type="password" asp-for=PinCustomer placeholder="PIN" />
                <span asp-validation-for=PinCustomer class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-2">
                <i class="fa-solid fa-key icon-login"></i>
            </div>
            <div class="col-10">
                <input class="form-control" type="password" name="pinConfirm" maxlength="6" placeholder="Confirm PIN" />
                <span class="text-danger">@ViewBag.ErrorPin</span>
            </div>
        </div>
        <div class="text-danger text-center mt-2">
            @ViewBag.Error
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-dark" type="submit">Register</button>
        </div>
    </form>
    <div class="mt-4">
        <span>Do you have an account? </span>
        <a href="@Url.Action("LoginCustomer")" class="link">Login</a>
    </div>
</div>

