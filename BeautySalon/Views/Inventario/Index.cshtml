@model List<BeautySalon.Models.ViewModels.ViewModelProduct>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-3">
    <h1>Inventario</h1>
</div>

<div class="mt-2">
    <a href="@Url.Content("~/Inventario/Create")">Nuevo Producto</a>
</div>

<div class="d-flex justify-content-center mt-2">
    <table class="table table-sm table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Codigo</th>
                <th scope="col">Nombre</th>
                <th scope="col">Stock Disponible</th>
                <th scope="col">Precio</th>
                <th scope="col">Categoria</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th>@product.sku</th>
                    <td>@product.name</td>
                    <td>@product.stock</td>
                    <td>@product.price</td>
                    <td>@product.categoria</td>
                    <td><a href="@Url.Content("~/Inventario/Detalles/" + product.id)">Detalles</a></td>
                    <td><a href="@Url.Content("~/Inventario/Editar/" + product.id)">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
