@using BeautySalon.Models.DataBase

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Product product = ViewBag.Product;
    Category category = ViewBag.Category;
}

<div class="d-flex justify-content-center">
    <h1>Detalles del Producto</h1>
</div>
<hr />
<div class="row mt-4">
    <div class="col-12 col-sm-6 col-md-5 col-lg-4 col-xl-3 col-xxl-3 d-flex justify-content-center mb-4">
        <img src="data:image/jpg; base64, @product.ImageProduct" alt="Sin imagen para mostrar" width="250" height="250" style="border: 1px solid;" />
    </div>
    <div class="col-12 col-sm-6">
        <div><span><strong>Codigo: </strong>@product.Sku</span></div>
        <div><span><strong>Nombre: </strong>@product.NameProduct</span></div>
        <div><span><strong>Precio: </strong>L. @product.Price.ToString("F2")</span></div>
        <div><span><strong>Descripción: </strong>@product.Description</span></div>
        <div><span><strong>Categoria: </strong>@category.Category1</span></div>
        <div><span><strong>Stock Disponible: </strong>@product.Stock</span></div>
        <div><span><strong>Stock Minimo: </strong>@product.StockMinimum</span></div>
        <div><span><strong>Fecha de ingreso: </strong>@product.CreateDate</span></div>
        <div><span><strong>Ultima modificación: </strong>@product.ModifyDate</span></div>
    </div>
</div>
<hr />
<div class="row mt-3">
    <div class="d-flex justify-content-center col-6">
        <div><button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "Inventario")';">Volver</button></div>
    </div>
    <div class="d-flex justify-content-center col-6">
        <div><a href="@Url.Action("Editar", "Inventario", new {id=product.IdProduct})" class="btn btn-primary">Editar</a></div>
    </div>
</div>

