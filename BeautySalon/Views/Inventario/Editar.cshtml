@model BeautySalon.Models.DataBase.Product
@using BeautySalon.Models.DataBase;

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Category> categories = ViewBag.Categories;
    List<Tax> taxes = ViewBag.Taxes;
}

<div class="d-flex justify-content-center mt-4">
    <h1>Editar Producto</h1>
</div>

<div class="d-flex justify-content-center mt-4 mb-3">
    <form asp-action="Editar" method="post" enctype="multipart/form-data">
        <input hidden asp-for=IdProduct />
        <input hidden asp-for=Sku />
        <div class="row">
            <div class="col-6">
                <img src="data:image/jpg; base64, @Model.ImageProduct" alt="Sin imagen para mostrar" width="150" height="150" style="border: 1px solid;" />
                <div mt-1>
                    <label class="form-label">Cambiar imagen</label>
                    <input type="file" class="form-control" asp-for=ImgFile />
                    <span class="text-danger" asp-validation-for=ImgFile></span>
                </div>
            </div>
            <div class="col-6">
                <div>
                    <label class="form-label">Codigo</label>
                    <input disabled class="form-control" asp-for=Sku />
                    <span class="text-danger" asp-validation-for=Sku></span>
                </div>
                <div class="mt-2">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" asp-for=NameProduct />
                    <span class="text-danger" asp-validation-for=NameProduct></span>
                </div>
                <div class="mt-2">
                    <label class="form-label">Categoria</label>
                    <select asp-for=IdCategory class="form-select" asp-items="@(new SelectList(categories, "IdCategory", "Category1"))">
                        <option>Seleccione</option>
                    </select>
                    <span class="text-danger" asp-validation-for=IdCategory></span>
                </div>
            </div>
        </div>
        <div class="mt-2">
            <label class="form-label">Descripcion</label>
            <input class="form-control" asp-for=Description />
            <span class="text-danger" asp-validation-for=Description></span>
        </div>
        <div class="row mt-2">
            <div class="col-3">
                <label class="form-label">Precio</label>
                <input class="form-control" asp-for=Price />
                <span class="text-danger" asp-validation-for=Price></span>
            </div>
            <div class="col-3">
                <label class="form-label">Tax</label>
                <select asp-for=IdTax class="form-select" asp-items="@(new SelectList(taxes, "IdTax", "TypeTax"))">
                    <option>Seleccione</option>
                </select>
                <span class="text-danger" asp-validation-for=IdTax></span>
            </div>
            <div class="col-3">
                <label class="form-label">Stok</label>
                <input class="form-control" asp-for=Stock />
                <span class="text-danger" asp-validation-for=Stock></span>
            </div>
            <div class="col-3">
                <label class="form-label">Stok Minimo</label>
                <input class="form-control" asp-for=StockMinimum />
                <span class="text-danger" asp-validation-for=StockMinimum></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="d-flex justify-content-center col-6">
                <div><button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index", "Inventario")';">Cancelar</button></div>
            </div>
			<div class="d-flex justify-content-center col-6">
				<div><button type="submit" class="btn btn-success">Guardar</button></div>
			</div>
        </div>
        
    </form>
</div>

