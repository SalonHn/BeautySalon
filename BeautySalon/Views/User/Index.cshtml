
@model IEnumerable<BeautySalon.Models.DataBase.UserAdmin>

@using BeautySalon.Models.ViewModels;

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ViewModelAllUser> users = ViewBag.Users;
}

<div class="d-flex justify-content-center mt-3"><h1>Empleados</h1></div>
<div class="mt-3"><a asp-action="Create">Agregar nuevo usuario</a></div>
<div class="mt-1">
    <div>
        <table class="table table-sm table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Creación</th>
                    <th>Empleado</th>
                    <th>Genero</th>
                    <th>Usuario</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in users)
                {
                    <tr>
                        <td>@item.CreateDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.name</td>
                        <td>@item.genero</td>
                        <td>@item.UserName</td>
                        <td>@item.userActive</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

