
@model IEnumerable<BeautySalon.Models.DataBase.UserAdmin>

@using BeautySalon.Models.ViewModels;

@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ViewModelAllUser> users = ViewBag.Users;
}

<div class="d-flex justify-content-center mt-3"><h1>Empleados</h1></div>
<hr />
<div class="mt-3"><a asp-action="Create">Nuevo Empleado</a></div>
<div class="mt-1">
    <div>
        <table class="table table-sm table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Empleado</th>
                    <th>Genero</th>
                    <th>Tipo</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in users)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.genero</td>
                        <td>@item.Type</td>
                        <td>@item.userActive</td>
                        <td>
                            <a asp-action="Details" asp-controller="User" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

