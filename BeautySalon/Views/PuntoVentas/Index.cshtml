
@{
    ViewData["Title"] = "Punto de venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-3">
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Volver</a>
</div>
<div class="row mt-3">
  <div class="col-sm-6 mb-3 mb-sm-0">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Nueva Factura</h5>
        <p class="card-text">Facturar una lista de articulos o servicios.</p>
        <a asp-action="NuevaVenta" asp-controller="PuntoVentas" class="btn btn-primary">Facturar</a>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Historial de Ventas</h5>
        <p class="card-text">Historial de ventas facturadas en el sistema.</p>
        <a asp-action="HistorialVentas" asp-controller="PuntoVentas" class="btn btn-primary">Facturas</a>
      </div>
    </div>
  </div>
</div>