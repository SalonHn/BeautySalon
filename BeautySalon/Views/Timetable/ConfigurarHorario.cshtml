
@model BeautySalon.Models.ViewModels.ViewModelAllHorario

@using BeautySalon.Models.DataBase;

@{
    ViewData["Title"] = "Configurar Horario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<HoursAvailable> horas = ViewBag.Horas;
}

<div class="d-flex justify-content-center mt-2"><h1>Configurar Horario</h1></div>
<div class="d-flex justify-content-center mt-2">
    <div>
        <form asp-action="ConfigurarHorario" method="post">
            <table class="table table-sm table-bordered">
                <thead class="table-secondary">
                    <tr>
                        <th scope="col">Dia</th>
                        <th scope="col">Hora de Apertura</th>
                        <th scope="col">Hora de Cierre</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="col form-check">
                                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for=domingo>
                                <label class="form-check-label" for="flexCheckDefault">Domingo</label>
                            </div>
                        </td>
                        <td><select class="form-select form-select-sm" asp-for=domingoO asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                        <td><select class="form-select form-select-sm" asp-for=domingoC asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="col form-check">
                                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for=lunes>
                                <label class="form-check-label" for="flexCheckDefault">Lunes</label>
                            </div>
                        </td>
                        <td><select class="form-select form-select-sm" asp-for=lunesO asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                        <td><select class="form-select form-select-sm" asp-for=lunesC asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="col form-check">
                                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for=martes>
                                <label class="form-check-label" for="flexCheckDefault">Martes</label>
                            </div>
                        </td>
                        <td><select class="form-select form-select-sm" asp-for=martesO asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                        <td><select class="form-select form-select-sm" asp-for=martesC asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="col form-check">
                                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for=miercoles>
                                <label class="form-check-label" for="flexCheckDefault">Miercoles</label>
                            </div>
                        </td>
                        <td><select class="form-select form-select-sm" asp-for=miercolesO asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                        <td><select class="form-select form-select-sm" asp-for=miercolesC asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="col form-check">
                                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for=jueves>
                                <label class="form-check-label" for="flexCheckDefault">Jueves</label>
                            </div>
                        </td>
                        <td><select class="form-select form-select-sm" asp-for=juevesO asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                        <td><select class="form-select form-select-sm" asp-for=juevesC asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="col form-check">
                                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for=viernes>
                                <label class="form-check-label" for="flexCheckDefault">Viernes</label>
                            </div>
                        </td>
                        <td><select class="form-select form-select-sm" asp-for=viernesO asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                        <td><select class="form-select form-select-sm" asp-for=viernesC asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                    </tr>
                    <tr>
                        <td>
                            <div class="col form-check">
                                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for=sabado>
                                <label class="form-check-label" for="flexCheckDefault">Sabado</label>
                            </div>
                        </td>
                        <td><select class="form-select form-select-sm" asp-for=sabadoO asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                        <td><select class="form-select form-select-sm" asp-for=sabadoC asp-items="@(new SelectList(horas, "IdHour", "Hour"))"></select></td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center mt-2">
                <button type="submit" class="btn btn-sm btn-primary">Guardar cambios</button>
            </div>
        </form>
    </div>
</div>



